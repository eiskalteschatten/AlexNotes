{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": false,
        "target": "es6",
        "outDir": "../dist",
        "baseUrl": "./src",
        "resolveJsonModule": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "types": [
            "webpack-env",
            "vuetify"
        ],
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}
