{
    "name": "alexnotes",
    "version": "0.1.0",
    "description": "A note-taking app.",
    "main": "./src/server.js",
    "private": true,
    "scripts": {
        "test": "npm run lint",
        "lint": "./node_modules/.bin/eslint 'frontend/src/**/*.{js,vue}' 'server/src/**/*.js'",
        "install-all": "npm install && npm -C ./frontend install && npm -C ./server install",
        "docker": "bash -c \"trap 'docker-compose down' EXIT; docker-compose up\"",
        "docker:rebuild": "bash -c \"trap 'docker-compose down' EXIT; docker-compose up --build\"",
        "devdb": "docker exec -it developers-notebook_postgres_1 psql devnotebook -U devnotebook -W"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:eiskalteschatten/AlexNotes.git"
    },
    "author": "Alex Seifert",
    "devDependencies": {
        "concurrently": "^4.1.0",
        "eslint": "^5.16.0",
        "eslint-plugin-html": "^5.0.3",
        "eslint-plugin-promise": "^4.1.1",
        "eslint-plugin-vue": "^5.2.2",
        "husky": "^1.3.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    }
}
