{
    "name": "alexnotes",
    "version": "0.1.0",
    "description": "A note-taking app.",
    "main": "./src/server.js",
    "private": true,
    "scripts": {
        "build-all": "npm -C ./server run build && npm -C ./frontend run build",
        "test": "npm run lint",
        "lint": "./node_modules/.bin/eslint 'frontend/src/**/*.{js,vue,ts,json}' 'server/src/**/*.{ts,js,json}'",
        "install-all": "npm install && npm -C ./frontend install && npm -C ./server install",
        "docker": "bash -c \"trap 'docker-compose down' EXIT; docker-compose up\"",
        "docker:rebuild": "bash -c \"trap 'docker-compose down' EXIT; docker-compose up --build\"",
        "start-all": "./node_modules/.bin/concurrently \"npm -C ./frontend start\" \"npm -C ./server run start:dev\""
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:eiskalteschatten/AlexNotes.git"
    },
    "author": "Alex Seifert",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^1.7.0",
        "@vue/eslint-config-typescript": "^4.0.0",
        "concurrently": "^4.1.0",
        "eslint": "^5.16.0",
        "eslint-plugin-disable": "^1.0.4",
        "eslint-plugin-promise": "^4.1.1",
        "eslint-plugin-vue": "^5.2.2"
    },
    "dependencies": {
        "typescript": "^3.4.5"
    }
}
