{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": false,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./src",
        "resolveJsonModule": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "types": [
            "webpack-env",
            "vuetify",
            "node"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}
